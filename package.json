{
  "name": "cooking-api",
  "version": "1.0.0",
  "description": "REST API for a cooking website with recipe management and authentication",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts | pino-pretty",
    "build": "tsc && tsc-alias",
    "start": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "lambda-offline": "npx serverless offline"
  },
  "keywords": [
    "cooking",
    "recipe",
    "api",
    "typescript",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@fastify/aws-lambda": "^6.0.0",
    "@fastify/cookie": "^9.4.0",
    "@fastify/cors": "^8.4.2",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/multipart": "^8.3.1",
    "@fastify/rate-limit": "^9.0.1",
    "@prisma/client": "^5.7.1",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "fastify": "^4.24.3",
    "jsonwebtoken": "^9.0.2",
    "sharp": "^0.34.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "serverless": "^4.0.0",
    "serverless-offline": "^14.4.0",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.39.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
